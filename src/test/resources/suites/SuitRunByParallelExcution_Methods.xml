<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite Demo Parallel Testing By Methods" verbose="1">
    <test name="Demo Parallel Testing By Methods 1" parallel="methods">
        <classes>
            <class name="testcases.LeadsTest">
                <methods>
                    <include name="testAddAndVerifyLead"/>
                    <include name="testVerifyEditLead"/>
                    <include name="testEditLead"/>
                    <include name="testDeleteLead"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Demo Parallel Testing By Methods 2" parallel="methods">
        <classes>
            <class name="testcases.LeadsTest">
                <methods>
                    <include name="testAddAndVerifyActive"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>